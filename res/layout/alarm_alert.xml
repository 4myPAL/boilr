<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	tools:context="com.github.andrefbsantos.boilr.activities.NotificationActivity">
	
	<TextView
	    android:id="@+id/firing_reason"
		android:textStyle="bold"
		android:gravity="center_vertical"
		android:textSize="22dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	<Button
		android:id="@+id/turn_off"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/turn_off"
		android:onClick="onTurnOffClicked">
	</Button>
	
	<Button
		android:id="@+id/keep_monitoring"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/keep_monitoring"
		android:onClick="onKeepMonitoringClicked">
	</Button>
</LinearLayout>