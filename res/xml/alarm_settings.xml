<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="generic"
        android:title="@string/pref_title_alerts" >

        <ListPreference
            android:defaultValue="@string/pref_exchange_default"
            android:dialogTitle="@string/pref_exchange_dialog_title"
            android:entries="@array/pref_exchange_entries"
            android:entryValues="@array/pref_exchange_entries_values"
            android:key="exchange"
            android:title="@string/pref_exchange_title" />

        <ListPreference
            android:dialogTitle="@string/pref_pair_dialog_title"
            android:key="pair"
            android:title="@string/pref_pair_title" />

        <ListPreference
            android:defaultValue="@string/pref_type_default"
            android:dialogTitle="@string/pref_type_dialog_title"
            android:entries="@array/pref_type_entries"
            android:entryValues="@array/pref_type_entries_values"
            android:key="type"
            android:title="@string/pref_type_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="specific"
        android:title="Specific" >
    </PreferenceCategory>
    
   <PreferenceCategory
 	    android:key="alert"
		android:title="@string/pref_title_alerts">
		<ListPreference
			android:key="pref_key_default_alert_type"
			android:title="@string/pref_title_default_alert_type"
			android:dialogTitle="@string/pref_title_default_alert_type"
			android:entries="@array/pref_entries_alert_type"
			android:entryValues="@array/pref_values_alert_type"
			android:defaultValue="@string/pref_default_alert_type" />
		<RingtonePreference
			android:key="pref_key_default_alert_sound"
			android:title="@string/pref_title_default_alert_sound"
			android:ringtoneType="alarm"
			android:defaultValue="content://settings/system/alarm_alert"
			android:showDefault="false"
			android:showSilent="true" />
		<CheckBoxPreference
		    android:key="pref_key_vibrate_default"
			android:title="@string/pref_title_vibrate_default"
			android:defaultValue="true" />
	</PreferenceCategory>
    
</PreferenceScreen>