            android:name="com.github.andrefbsantos.boilr.activities.AlarmListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmSettingsActivity"
            android:label="@string/alarm_settings" >
        </activity>
        <activity android:name=".ViewAlarmSettingsActivity" >
        </activity>
        <activity android:name=".AlarmCreationActivity" >
        </activity>
    </application>

</manifest>