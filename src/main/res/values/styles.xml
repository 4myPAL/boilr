<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="BoilrTheme.Dark" parent="android:Theme.Holo">
        <item name="ic_action_about">@drawable/ic_action_about_dark</item>
        <item name="ic_action_overflow">@drawable/ic_action_overflow_dark</item>
        <item name="ic_action_search">@drawable/ic_action_search_dark</item>
        <item name="ic_action_send_now">@drawable/ic_action_send_now_dark</item>
        <item name="ic_action_settings">@drawable/ic_action_settings_dark</item>
        <item name="ic_action_remove">@drawable/ic_action_remove_dark</item>
        <item name="ic_action_new">@drawable/ic_action_new_dark</item>
        <item name="progress_circle_color_on">@color/highlightblue</item>
        <item name="progress_circle_color_off">@color/ltgray</item>
        <item name="row_color">@drawable/dkrow</item>
        <item name="off_bar">@drawable/dkoffbar</item>
		<item name="backrepeat">@drawable/backrepeat_dark</item>
		<item name="android:listViewStyle">@style/TransparentListView</item>
		<item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
    </style>

    <style name="BoilrTheme.Light" parent="@android:Theme.Holo.Light">
        <item name="ic_action_about">@drawable/ic_action_about_light</item>
        <item name="ic_action_overflow">@drawable/ic_action_overflow_light</item>
        <item name="ic_action_search">@drawable/ic_action_search_light</item>
        <item name="ic_action_send_now">@drawable/ic_action_send_now_light</item>
        <item name="ic_action_settings">@drawable/ic_action_settings_light</item>
        <item name="ic_action_remove">@drawable/ic_action_remove_light</item>
        <item name="ic_action_new">@drawable/ic_action_new_light</item>
        <item name="progress_circle_color_on">@color/highlightblue</item>
        <item name="progress_circle_color_off">@color/dkgray</item>
        <item name="row_color">@drawable/ltrow</item>
        <item name="off_bar">@drawable/ltoffbar</item>
        <item name="backrepeat">@drawable/backrepeat_light</item>
		<item name="android:listViewStyle">@style/TransparentListView</item>
		<item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
    </style>
    
    <!-- Styles below by yanchenko http://stackoverflow.com/questions/2706913/how-to-make-android-apps-background-image-repeat/2706944#2706944 -->
	<style name="TransparentListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>

	<style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:cacheColorHint">@android:color/transparent</item>
	</style>
</resources>