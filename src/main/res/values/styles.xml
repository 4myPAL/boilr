        <item name="messageStyle">@style/DarkUndoBarMessage</item>
        <item name="buttonStyle">@style/DarkUndoBarButton</item>
    </style>
    
	<style name="DarkUndoBarContainer" parent="UndoBarClassic">
        <item name="android:background">@drawable/toast_background_dark</item>
    </style>
    
	<style name="DarkUndoBarMessage" parent="UndoBarMessageClassic">
